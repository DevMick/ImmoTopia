# Database
DATABASE_URL="postgresql://user:password@localhost:5432/immotopia?schema=public"

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-access-token-secret-minimum-256-bits-here"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-minimum-256-bits-here"

# Email Service Configuration
EMAIL_SERVICE_TYPE="smtp"
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
EMAIL_FROM="noreply@immotopia.com"
EMAIL_SMTP_HOST="smtp.mailtrap.io"
EMAIL_SMTP_PORT=2525
EMAIL_SMTP_USER="your-smtp-user"
EMAIL_SMTP_PASS="your-smtp-password"

# Application URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"
CLIENT_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8000/api/auth/google/callback"

# Environment
NODE_ENV="development"
PORT=8000
